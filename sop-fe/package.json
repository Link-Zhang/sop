    "react-hot-toast": "2.6.0",
    "swr": "2.3.6",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "4.1.13",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "concurrently": "9.2.1",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2"
